<%- include("../includes/head.ejs") %>
    <link rel="stylesheet" href="/css/product.css">
</head>
<%- include("../includes/navigation.ejs") %>
        <main>
            <% if (products.length > 0) {%>
                <div class="grid">
                    <% for (let product of products) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title"><%= product.title %></h1>
                            </header>
                            <div class="card__image">
                                <% if (product.imageUrl) {%>
                                    <img src="<%= product.imageUrl %>"  alt="<%= product.imageUrl %>"/>
                                <% } else {%>
                                    <img src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png"
                                        alt="A Book"/>
                                <% } %>
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$<%= product.price%></h2>
                                <p class="product__description">
                                    <%= product.description %>
                                </p>
                            </div>
                            <div class="card__actions">
                                <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn">Editar ‚úçüèº</a>
                                <!-- <input type="hidden" name="_csrf" value="<%=csrfToken%>"> -->
                                <input type="hidden" value="<%= product._id %>" name="productId">
                                <button class="btn" type="button" onclick="deleteProduct(this)">Borrar üóë </button>
                            </div>
                        </article>
                    <% } %>
                </div>
            <% } else { %>
                <h1>No se encontraron productos! üòî</h1>
            <% } %>
        </main>
<%- include("../includes/end.ejs") %>
<script src="/js/admin.js"></script>
